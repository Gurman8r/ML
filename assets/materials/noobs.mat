# Camera
# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #
uniform float		camera.fov		{ 45.0 }
uniform vec3		camera.position { 0.0, 0.0, 5.0 }
uniform vec3		camera.target	{ 0.0, 0.0, 0.0 }
uniform float		camera.zNear	{ 0.001 }
uniform float		camera.zFar		{ 1000.0 }

# Fragment
# * * * * * * * * * * * * * * * * * * * * * * * * * * * * * #
uniform bool		u_test			{ 1 }
uniform sampler2D	u_spec_tex		{ earth_sm } 
uniform sampler2D	u_diff_tex		{ earth_dm }
uniform vec3		u_lightPos		{ 0.0, 0.0, 30.0 }
uniform float		u_ambient		{ 0.01 }
uniform col4		u_diffuse		{ 1.0, 1.0, 0.75, 1.0 }
uniform int			u_shininess		{ 8 }
uniform float		u_specular		{ 0.1 }